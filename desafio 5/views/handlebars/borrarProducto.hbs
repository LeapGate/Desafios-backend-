<main class="container p-3">
  <section class="row justify-content-around">
    {{#if respuesta}}
      <h3 class="col-12 text-center mb-4">Producto Eliminado</h3>
      <article class="col-8 col-md-6 col-lg-3 d-flex flex-column p-2 text-center">
        <img class="img-fluid rounded" src={{respuesta.deleted.imagen}} alt={{respuesta.deleted.nombre}} />
        <h3 class="text-secondary">{{respuesta.deleted.nombre}}</h3>
        <b>$ {{respuesta.deleted.precio}}</b>
      </article>

      {{else}}
      <h4 class="text-center">El producto especificado no ha sido encontrado</h4>
    {{/if}}
  </section>
</main>