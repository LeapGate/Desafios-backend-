<main class="container p-3">
  <section class="row justify-content-around">
    {{#if respuesta}}
      <h3 class="col-12 text-center mb-4">Producto agregado</h3>
      <article class="col-8 col-md-6 col-lg-3 d-flex flex-column p-2 text-center card">
        <img class="img-fluid rounded" src={{respuesta.new.imagen}} alt={{respuesta.new.nombre}} />
        <h3 class="text-secondary">{{respuesta.new.nombre}}</h3>
        <b>$ {{respuesta.new.precio}}</b>
      </article>

      <h3 class="col-12 text-center my-4">Producto reemplazado</h3>
      <article class="col-8 col-md-6 col-lg-3 d-flex flex-column p-2 text-center">
        <img class="img-fluid rounded" src={{respuesta.previous.imagen}} alt={{respuesta.previous.nombre}} />
        <h3 class="text-secondary">{{respuesta.previous.nombre}}</h3>
        <b>$ {{respuesta.previous.precio}}</b>
      </article>

      {{else}}
      <h4 class="text-center">Alguno de los campos ha quedado sin rellenar</h4>
    {{/if}}
  </section>
</main>