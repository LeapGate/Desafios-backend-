extends layout/main

block content
  main(class="container-lg ")
    section(class="row justify-content-around")
      if respuesta
        h1(class="col-12 text-center mb-4") Producto Eliminado
        article(class="col-8 col-md-6 col-lg-3 d-flex flex-column p-2 text-center")
          img(class="img-fluid rounded" src=respuesta.deleted.imagen, alt=respuesta.deleted.nombre)
          h3(class="text-sencondary")=respuesta.deleted.nombre
          b="$ " + respuesta.deleted.precio
      else 
        h4(class="text-center") El producto no ha sido encontrado
