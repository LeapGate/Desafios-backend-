<main class="container p-3">
  <section class="row justify-content-around">
    {{#if respuesta}}
      <h1 class="col-12 text-center mb-4">Lista de productos</h1>
      <article class="col-8 col-md-6 col-lg-3 d-flex flex-column p-2 text-center">
        <img class="img-fluid rounded" src={{respuesta.imagen}} alt={{respuesta.nombre}} />
        <h3 class="text-secondary">{{respuesta.nombre}}</h3>
        <b>$ {{respuesta.precio}}</b>
      </article>

      {{else}}
      <h4 class="text-center">El producto especificado no ha sido encontrado</h4>
    {{/if}}
    <form action="/" method="get">
      <button class="btn btn-danger" type="submit">Volver</button>
    </form>
  </section>
</main>