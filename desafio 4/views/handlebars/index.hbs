
<main class="container-lg p-3">
  <section class="row justify-content-around">
    <h1 class="col-12 text-center">Lista de productos</h1>
    {{#each respuesta}}
    <article class="col-5 col-md-5 col-lg-3 mx-lg-3 d-flex flex-column my-4 p-2 text-center">
      <img class="img-fluid rounded" src={{imagen}} alt={{nombre}} />
      <h3 class="text-secondary">{{nombre}}</h3>
      <b> $ {{precio}}</b>
    </article>
    {{/each}}
    <form action="/" method="get">
      <button class="btn btn-danger" type="submit">Volver</button>
    </form>
  </section>
</main>