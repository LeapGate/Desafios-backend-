extends layout/main

block content
  main(class="container-lg")
    section(class="row justify-content-around")
      h1(class="col-12 text-center") Lista de Productos 
      each element in respuesta
        article(class="col-5 col-md-5 col-lg-3 mx-lg-3 d-flex flex-column my-4 p-2 text-center")
          img(class="img-fluid rounded" src=element.imagen, alt=element.nombre)
          h3(class="text-sencondary")= element.nombre
          b="$ " + element.precio
  form(action="/" method="get")
    button(class="btn btn-danger" type="submit") Volver